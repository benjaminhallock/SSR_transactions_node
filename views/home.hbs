<div class="container text-center">
    <h2 class="mt-4">Transaction Summary</h2>

    <div class="row justify-content-center mt-4">
        <!-- Total Income Card -->
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Income</h5>
                    <p class="card-text display-6">
                        ${{formatAmount monthlyTotal.income}}
                    </p>
                </div>
            </div>
        </div>

        <!-- Total Expenses Card -->
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-danger h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Expenses</h5>
                    <p class="card-text display-6">
                        ${{formatAmount monthlyTotal.expenses}}
                    </p>
                </div>
            </div>
        </div>

        <!-- Balance Card -->
        <div class="col-md-4 mb-3">
            <div class="card text-white {{#if (isNegative balance)}}bg-danger{{else}}bg-info{{/if}} h-100">
                <div class="card-body">
                    <h5 class="card-title">Balance</h5>
                    <p class="card-text display-6">
                        ${{formatAmount balance}}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Transactions Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Recent Transactions</h4>
                    <a href="/add-transaction" class="btn btn-primary">Add Transaction</a>
                </div>
                <div class="card-body">
                    {{#if transactions}}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each transactions}}
                                <tr>
                                    <td>{{formatDate this.date}}</td>
                                    <td>{{this.description}}</td>
                                    <td>{{this.category}}</td>
                                    <td class="{{#if (isNegative this.amount)}}text-danger{{else}}text-success{{/if}}">
                                        ${{formatAmount this.amount}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{else}}
                    <p class="text-center my-4">No recent transactions found.</p>
                    {{/if}}
                    <div class="text-center mt-3">
                        <a href="/transactions" class="btn btn-secondary">View All Transactions</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>